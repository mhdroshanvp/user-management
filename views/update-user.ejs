<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <h2 class="text-dark" style="font-weight: bolder;">Update User</h2>
                    <p class="text-dark">Use the below form to update an exist account</p>
                </div>
            </div>
        </div>

        <!-- add user form -->
        <!-- form handling -->
        <form action="/update-user" method="post" id="update_user">
            <div class="new_user" style="margin-top: 20px;">
                <div class="form-group justify-content-center">
                    <input type="hidden" name="id" value="<%= data._id %>">
                    <input type="text" name="name" value="<%= data.name %>" placeholder="Mark Stoenis" style="width: 100%; padding: 8px;">
                </div>
                <div class="form-group">
                    <input type="text" name="email" value="<%= data.email%>" placeholder="example@gmail.com" style="width: 100%; padding: 8px;">
                </div>
                <div class="form-group">
                    <input type="text" name="password" value="<%= data.password%>" placeholder="password" style="width: 100%; padding: 8px;">
                </div>

                <div class="form-group">
                    <label for="status" class="text-dark">Admin</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="admin" value=true>
                        <label for="radio-4" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="admin" value=false>
                        <label for="radio-5" class="radio-label">Inactive</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update" style="background-color: #f0f0f0; padding: 8px 16px; border: none; cursor: pointer;">Save</button>
                </div>
            </div>
        </form>

    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
 